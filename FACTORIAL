// 1st Mathode

#include <iostream>
using namespace std;
int main()
{
    int num, fact= 1;
    cout << "enter the number : ";
    cin >> num;
  
    for (int i = 1; i <= num; i++) {
        fact = fact * i; 
    }
          cout<<"the factorial of a given number :" << fact<<endl ;
    
    return 0;
}


// 2nd Mathode 

#include <iostream>
using namespace std; 
int main()
{
    long long num, fact= 1;
    cout << "enter the number : ";
    cin >> num;
    
    for (int i = 1; i <= num; i++) {
        fact = fact * i; 
        cout << "this is a factorial of midium numbers :" << i << "\t" << fact << "\n" ;
    }
          cout<<"the factorial of a given number :" << fact<<endl ;
    
    return 0;
}
